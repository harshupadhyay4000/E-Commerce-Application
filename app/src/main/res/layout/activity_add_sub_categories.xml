<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/new_f">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250sdp"
        android:layout_marginTop="@dimen/_120sdp"
        android:backgroundTint="@color/transparent_white">
        <Spinner
            android:id="@+id/spinner_addsub_cat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"/>

        <EditText
            android:id="@+id/sub_catedt_txt"
            android:layout_width="@dimen/_255sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_gravity="center"
            android:hint="Enter Sub-Category"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:singleLine="true"/>
        <Button
            android:id="@+id/subcat_addbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_190sdp"
            android:layout_marginLeft="@dimen/_120sdp"
            android:text="Add"
            android:backgroundTint="@color/Darkblue"/>


    </androidx.cardview.widget.CardView>

</LinearLayout>