<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pages.Vendor.Dashboard.Dashboard"
    android:orientation="vertical"
    android:background="@drawable/spl_back">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Orders"
        android:fontFamily="@font/oswald_bold"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:textSize="@dimen/_30sdp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/order_bg_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_img"
        android:layout_gravity="center"
        />
    <ImageView
        android:id="@+id/order_bg_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/text_nothing"
        android:layout_gravity="center"/>
</LinearLayout>