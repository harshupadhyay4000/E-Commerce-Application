<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    android:orientation="vertical">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_v_subcategoryone"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#2A398F"
            app:title="SubCategories"
            app:titleTextColor="@android:color/white" />



    </com.google.android.material.appbar.AppBarLayout>
    <Spinner
        android:id="@+id/spinner_sub_cat_two"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_55sdp"
        android:background="@drawable/spinner_border"/>
    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_view_subcategory"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_100sdp"
        android:layout_marginLeft="@dimen/_30sdp"
        android:queryHint="Search"
        android:background="@drawable/searchview_border"
        android:iconifiedByDefault="false" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_v_sub_categoryone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_170sdp">

    </androidx.recyclerview.widget.RecyclerView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addsubcatbtnone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_550sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:src="@drawable/baseline_add_24"
        app:backgroundTint="@color/bluebtn"
        app:elevation="6dp" />

    <ImageView
        android:id="@+id/subcat_bg_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_img"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_160sdp"/>


</RelativeLayout>