<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/category_v_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8sdp"
    app:cardCornerRadius="@dimen/_20sdp"
    android:backgroundTint="@color/blue"
    android:padding="@dimen/_8sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_8sdp">

        <ImageView
            android:id="@+id/category_v_image"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/category_v_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/category_v_image"
            android:layout_marginStart="@dimen/_8sdp"
            android:text="Category Name"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="@dimen/_14ssp"
            android:layout_centerVertical="true" />


        <Button
            android:id="@+id/delete_button"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"

            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_60sdp"
            android:layout_below="@id/category_v_name"
            android:background="@drawable/bin"/>
        <Button
            android:id="@+id/edit_button"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"

            android:layout_alignParentEnd="true"

            android:layout_below="@id/category_v_name"
            android:background="@drawable/edit"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
