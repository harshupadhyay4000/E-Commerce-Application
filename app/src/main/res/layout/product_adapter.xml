<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/product_v_one_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8sdp"
    android:padding="@dimen/_8sdp"
    app:cardCornerRadius="@dimen/_20sdp"
    android:backgroundTint="@color/blue">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_8sdp">

        <ImageView
            android:id="@+id/product_v_one_image"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/product_v_one_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/product_v_one_image"
            android:layout_marginStart="@dimen/_8sdp"
            android:text="Product Price"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="@dimen/_10ssp"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/product_v_one_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_v_one_name"
            android:layout_toEndOf="@id/product_v_one_image"
            android:layout_marginStart="@dimen/_8sdp"
            android:text="Product Name"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_4sdp"/>

        <Button
            android:id="@+id/productdelete_button"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_60sdp"
            android:layout_below="@id/product_v_one_price"
            android:background="@drawable/bin"/>

        <Button
            android:id="@+id/productedit_button"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/product_v_one_price"
            android:background="@drawable/edit"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
