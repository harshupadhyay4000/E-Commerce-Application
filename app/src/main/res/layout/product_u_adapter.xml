<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/product_u_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8sdp"
    android:padding="@dimen/_8sdp"
    app:cardCornerRadius="@dimen/_20sdp"
    android:backgroundTint="@color/blue">

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_8sdp">

        <ImageView
            android:id="@+id/product_u_image"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/product_u_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textStyle="bold"
            android:textSize="@dimen/_14ssp"
            android:layout_marginLeft="@dimen/_100sdp"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_14sdp"/>
        <TextView
            android:id="@+id/product_u_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_40sdp"
            android:text="Product Price"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/_12ssp"
            android:layout_marginLeft="@dimen/_100sdp"/>



        <ImageButton
            android:id="@+id/minusbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sub"
            android:layout_marginTop="@dimen/_55sdp"
            android:layout_marginLeft="@dimen/_200sdp"/>

        <TextView
            android:id="@+id/quantity_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:background="@color/blue"
            android:layout_marginLeft="@dimen/_235sdp"
            android:layout_marginTop="@dimen/_60sdp"
            android:textColor="@color/Darkblue"
            android:textStyle="bold"
            />


        <ImageButton
            android:id="@+id/addbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/adding"
            android:layout_marginTop="@dimen/_55sdp"
            android:layout_marginLeft="@dimen/_250sdp"/>
        <ImageButton
            android:id="@+id/addcart"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/add_to_cart"
            android:layout_marginLeft="@dimen/_190sdp"
            android:layout_marginTop="@dimen/_50sdp"/>
        <ImageButton
            android:id="@+id/go_to_cart"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/go_to_cart"
            android:layout_marginLeft="@dimen/_90sdp"
            android:layout_marginTop="@dimen/_70sdp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
